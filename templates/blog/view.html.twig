{% extends 'app.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}
{% block main %}
  <article class="bg-card border border-border rounded">
    <div class="p-6 border-b border-border">
      <div class="flex items-start justify-between gap-4">
        <h1 class="text-2xl font-semibold text-card-foreground">
          {{ post.title }}
        </h1>
        <button class="px-3 py-1.5 text-sm text-muted-foreground hover:bg-muted hover:text-foreground rounded transition-colors flex items-center gap-1.5">
          <twig:ux:icon name="tabler:edit" class="w-4 h-4"/>
          <span>Edit</span>
        </button>
      </div>
      
      <div class="flex flex-wrap items-center gap-4 mt-3 text-xs text-muted-foreground">
        <div class="flex items-center gap-1.5">
          <twig:ux:icon name="tabler:calendar-month" class="w-3.5 h-3.5"/>
          <span>{{ post.createdAt | date() }}</span>
        </div>
        <div class="flex items-center gap-1.5">
          <twig:ux:icon name="tabler:user" class="w-3.5 h-3.5"/>
          <span class="text-foreground font-medium">{{ post.author.fullName }}</span>
          <span class="text-muted-foreground">@{{ post.author.username }}</span>
        </div>
      </div>
      
      {% if post.tags|length > 0 %}
      <div class="flex flex-wrap items-center gap-2 mt-3">
        {% for tag in post.tags %}
          <a href="" class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium bg-muted 
            text-muted-foreground rounded hover:bg-border transition-colors">
            <twig:ux:icon name="tabler:tag" class="w-3 h-3"/>
            <span>{{ tag }}</span>
          </a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
    
    <div class="p-6">
      <div class="prose prose-sm max-w-none text-muted-foreground">
        {{ post.content | raw }}
      </div>
    </div>
    
  </article>
{% endblock %}

{% block sidebar %}
  <div class="space-y-4">
    <div class="bg-card border border-border rounded p-4">
      <h3 class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-3">Details</h3>
      <dl class="space-y-3">
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Created</dt>
          <dd class="text-sm text-foreground">{{ post.createdAt | date() }}</dd>
        </div>
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Last updated</dt>
          <dd class="text-sm text-foreground">{{ post.updatedAt | date() }}</dd>
        </div>
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Author</dt>
          <dd class="text-sm text-foreground font-medium">{{ post.author.fullName }}</dd>
        </div>
      </dl>
    </div>
    
{% endblock %}