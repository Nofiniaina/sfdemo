{% extends 'app.html.twig' %}
{% block title %}Create post{% endblock %}
{% block main %}
  <article class="bg-card border border-border rounded-lg shadow-sm">
    <div class="px-6 py-4 border-b border-border">
      <div class="flex items-start justify-between gap-4">
        <div>
          <h1 class="text-2xl font-semibold text-card-foreground">
            Create post
          </h1>
          <p class="text-sm text-muted-foreground mt-1">
            Fill in the details below to create a new blog post
          </p>
        </div>
      </div>
    </div>  
    
    <div class="p-6">
      <twig:Field:Set>
        {# Post Content #}
        <div class="mb-2">
          <twig:Field:Group class="gap-4">
            <twig:Field>
              <twig:Field:Label for="title">Title</twig:Field:Label>
              <twig:Input id="title" placeholder="Enter a compelling title" />
              <twig:Field:Description>
                Keep it concise and descriptive
              </twig:Field:Description>
            </twig:Field>
            
            <twig:Field>
              <twig:Field:Label for="summary">Summary</twig:Field:Label>
              <twig:Textarea id="summary" placeholder="Write a brief summary of your post" rows="3" />
              <twig:Field:Description>
                A short description that appears in post listings
              </twig:Field:Description>
            </twig:Field>
            
            <twig:Field>
              <twig:Field:Label for="content">Content</twig:Field:Label>
              <twig:Textarea id="content" placeholder="Write your post content here..." rows="10" />
            </twig:Field>
          </twig:Field:Group>
        </div>

        {# Tags #}
        <div class="mb-2">
          <twig:Field>
            <twig:Field:Label for="tags">Tags</twig:Field:Label>
            <twig:Input id="tags" placeholder="symfony, php, web-development" />
            <twig:Field:Description>
              Separate tags with commas
            </twig:Field:Description>
          </twig:Field>
        </div>

        {# Form Actions #}
        <div class="flex items-center justify-end gap-3 pt-4 border-t border-border">
          <twig:Button variant="outline" type="button" class="cursor-pointer">
            <twig:ux:icon name="tabler:x" class="w-4 h-4" />
            Cancel
          </twig:Button>
          <twig:Button variant="outline" type="button" class="cursor-pointer">
            <twig:ux:icon name="tabler:eye" class="w-4 h-4" />
            Preview
          </twig:Button>
          <twig:Button type="submit" class="cursor-pointer">
            <twig:ux:icon name="tabler:check" class="w-4 h-4" />
            Publish Post
          </twig:Button>
        </div>
      </twig:Field:Set>
    </div>
  </article>
{% endblock %}

{% block sidebar %}
  <div class="space-y-4">
    {# Publishing Details #}
    <div class="bg-card border border-border rounded-lg p-4">
      <h3 class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-3">
        Publishing Details
      </h3>
      <dl class="space-y-3">
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Status</dt>
          <dd class="text-sm">
            <span class="inline-flex items-center gap-1.5 px-2 py-1 rounded-md bg-muted text-muted-foreground text-xs font-medium">
              <span class="w-1.5 h-1.5 rounded-full bg-muted-foreground"></span>
              Draft
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Created</dt>
          <dd class="text-sm text-foreground">{{ "now"|date("M d, Y") }}</dd>
        </div>
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Last updated</dt>
          <dd class="text-sm text-foreground">{{ "now"|date("M d, Y H:i") }}</dd>
        </div>
        <div>
          <dt class="text-xs text-muted-foreground mb-1">Author</dt>
          <dd class="text-sm text-foreground font-medium">Current User</dd>
        </div>
      </dl>
    </div>

    {# Quick Actions #}
    <div class="bg-card border border-border rounded-lg p-4">
      <h3 class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-3">
        Quick Actions
      </h3>
      <div class="space-y-2">
        <twig:Button variant="outline" class="w-full justify-start" size="sm">
          <twig:ux:icon name="tabler:device-floppy" class="w-4 h-4" />
          Save as Draft
        </twig:Button>
        <twig:Button variant="outline" class="w-full justify-start" size="sm">
          <twig:ux:icon name="tabler:trash" class="w-4 h-4" />
          Discard Changes
        </twig:Button>
      </div>
    </div>

    {# Help #}
    <div class="bg-accent border border-border rounded-lg p-4">
      <div class="flex items-start gap-3">
        <div class="mt-0.5">
          <twig:ux:icon name="tabler:info-circle" class="w-5 h-5 text-accent-foreground" />
        </div>
        <div>
          <h3 class="text-sm font-medium text-accent-foreground mb-1">
            Writing Tips
          </h3>
          <p class="text-xs text-accent-foreground/80 leading-relaxed">
            Use clear headings, break up long paragraphs, and add relevant tags to help readers find your content.
          </p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}