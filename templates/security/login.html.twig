{% block sidebar %}
  <div class="space-y-4">
    {# Welcome Message #}
    <div class="bg-primary/5 border border-primary/20 rounded-lg p-4">
      <div class="flex items-start gap-3">
        <div class="mt-0.5">
          <twig:ux:icon name="tabler:lock-open" class="w-5 h-5 text-primary" />
