{% extends "app.html.twig" %}

{% block title %}Log in!{% endblock %}

{% block main %}
  <article class="bg-card border border-border rounded-lg shadow-sm">
    <div class="px-6 py-4 border-b border-border">
      <div class="flex items-start justify-between gap-4">
        <div>
          <h1 class="text-2xl font-semibold text-card-foreground">
            Sign In
          </h1>
          <p class="text-sm text-muted-foreground mt-1">
            Enter your credentials to access your account
          </p>
        </div>
      </div>
    </div>

    <div class="p-6">
      {% if error %}
        <div class="mb-6 p-4 rounded-lg bg-destructive/10 border border-destructive/20">
          <div class="flex items-start gap-3">
            <twig:ux:icon name="tabler:alert-circle" class="w-5 h-5 text-destructive shrink-0 mt-0.5" />
            <div>
              <h3 class="text-sm font-medium text-destructive mb-1">Authentication Error</h3>
              <p class="text-sm text-destructive/90">
                {{ error.messageKey|trans(error.messageData, 'security') }}
              </p>
            </div>
          </div>
        </div>
      {% endif %}

      <form method="post">
        <twig:Field:Set>
          <twig:Field:Group class="gap-4">
            <twig:Field>
              <twig:Field:Label for="username">Username</twig:Field:Label>
              <twig:Input 
                id="username" 
                name="_username" 
                type="text" 
                placeholder="eg: sarah.johnson" 
                value="{{ last_username }}"
                autocomplete="username"
                required
              />
            </twig:Field>

            <twig:Field>
              <twig:Field:Label for="password">Password</twig:Field:Label>
              <twig:Input 
                id="password" 
                name="_password" 
                type="password" 
                placeholder="••••••••"
                autocomplete="current-password"
                required
              />
            </twig:Field>

            <div class="flex items-center justify-between">
              <label class="flex items-center gap-2 cursor-pointer">
                <input 
                  type="checkbox" 
                  name="_remember_me" 
                  id="_remember_me"
                  class="w-4 h-4 rounded border-input text-primary focus:ring-2 focus:ring-ring focus:ring-offset-2"
                />
                <span class="text-sm text-foreground" for="_remember_me">
                    Remember me
                </span>
              </label>

              <a href="" class="text-sm text-primary hover:underline">
                Forgot password?
              </a>
            </div>
          </twig:Field:Group>

          <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

          <div class="flex items-center justify-between gap-3 pt-6 mt-6 border-t border-border">
            <p class="text-sm text-muted-foreground">
              Don't have an account? 
              <a href="" class="text-primary hover:underline font-medium">Sign up</a>
            </p>
            <twig:Button type="submit">
              <twig:ux:icon name="tabler:login" class="w-4 h-4" />
              Sign In
            </twig:Button>
          </div>
        </twig:Field:Set>
      </form>
    </div>
  </article>

